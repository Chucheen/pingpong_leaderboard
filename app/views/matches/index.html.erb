<% total_users = @users.length %>
<div>
  <table class="table">
    <thead>
      <tr>
        <th>Rank</th>
        <th>Name</th>
        <th>Score</th>
        <th>Games Played</th>
      </tr>
    </thead>
    <tbody>
      <% @users.each_with_index do |user, index| %>
        <tr>
          <td>
            <%= index + 1 %>
          </td>
          <td>
            <%= user.name %>
          </td>
          <td>
            <%= user.score %>
          </td>
          <td>
            <%= user.games_played %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>